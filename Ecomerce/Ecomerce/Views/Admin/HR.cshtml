@using Microsoft.AspNetCore.Identity;

@model List<IdentityUser>
@{
    ViewData["Title"] = "HR";
    
}

<h1 style="text-align:center;margin-bottom:2px;">HR</h1>

<link href="~/css/ownerpage.css" rel="stylesheet" />

<p style="text-align:center;color:gray">Manage your staff!!</p>

<div class="container" style="min-height:600px;">

    <div style="flex-basis:15%"></div>

    <partial name="_SideNavBar" />

    <a asp-action="AddRole" asp-controller="Role" style="position:absolute;top:-3rem;right:0px;">
        <div class="btn btn-outline-info" style="height:fit-content">

            Add Roles
        </div>
    </a>
    <a asp-action="AddAdmin" asp-controller="Role" style="position:absolute;top:-3rem;right:300px;">
        <div class="btn btn-outline-primary" style="height:fit-content">

            Add Admin
        </div>
    </a>
  
    <table class="table table-striped table-dark">

        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                     Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Worked Date
                </th>
                <th>
                    Role
                </th>

            </tr>
        </thead>
        <tbody>

            @{
                for (int i = 0; i < Model?.Count(); i++)
                {
                     <tr>
                            <td>
                                @Model[i].Id
                            </td>
                            <td>
                                @Model[i].UserName
                            </td>
                            <td>
                                @Model[i].Email
                            </td>
                            <td>
                                now
                            </td>
                            <td>
                                Admin
                            </td>

               
                        </tr>


                    

                }
            }




        </tbody>



    </table>




</div>




